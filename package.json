{
  "name": "preact-train-01-app",
  "version": "0.0.1",
  "description": "A Preact training application with professional dashboard, routing, and signals state management",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/prachwal/preact-train-01-app.git"
  },
  "bugs": {
    "url": "https://github.com/prachwal/preact-train-01-app/issues"
  },
  "homepage": "https://github.com/prachwal/preact-train-01-app#readme",
  "keywords": [
    "preact",
    "typescript",
    "vite",
    "dashboard",
    "signals",
    "routing",
    "scss",
    "design-system"
  ],
  "author": "prachwal",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "vite build",
    "dev": "vite",
    "start": "node ./dist/index.js",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "type-check": "tsc --noEmit",
    "lint:css": "stylelint \"src/**/*.{css,scss}\"",
    "lint:css:fix": "stylelint \"src/**/*.{css,scss}\" --fix",
    "lint:css:watch": "stylelint \"src/**/*.{css,scss}\" --watch",
    "docs:generate": "typedoc",
    "docs:serve": "npx http-server ./docs -p 8080",
    "docs:clean": "rm -rf ./docs",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "merge-src": "./scripts/merge.sh src"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@storybook/addon-docs": "^10.0.8",
    "@storybook/preact-vite": "^10.0.8",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/preact": "^3.2.4",
    "@types/node": "^24.10.1",
    "@vitest/coverage-v8": "^4.0.10",
    "@vitest/ui": "^4.0.10",
    "jsdom": "^27.2.0",
    "rimraf": "^6.1.0",
    "sass": "^1.94.1",
    "storybook": "^10.0.8",
    "stylelint": "^16.25.0",
    "stylelint-config-standard": "^39.0.1",
    "stylelint-config-standard-scss": "^16.0.0",
    "stylelint-scss": "^6.12.1",
    "typedoc": "^0.28.14",
    "typedoc-plugin-markdown": "^4.9.0",
    "typescript": "^5.9.3",
    "vite": "^7.2.2",
    "vitest": "^4.0.10"
  },
  "dependencies": {
    "@preact/preset-vite": "^2.10.2",
    "@preact/signals": "^2.5.0",
    "lucide-react": "^0.554.0",
    "preact": "^10.27.2",
    "preact-iso": "^2.11.0"
  }
}
